
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Quên mật khẩu</title>

    <!-- Custom fonts for this template-->
    <link href="@Url.Content("~/content/admin/assets/")vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/content/admin/assets/")https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="@Url.Content("~/content/admin/assets/")css/sb-admin-2.min.css" rel="stylesheet">

</head>
<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-lg-5">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <button type="button" class="close" data-dismiss="modal">
                                            <a href="@Url.Action("Index", "User")" class="btn-link" data-toggle="tooltip" data-placement="left" title="" data-original-title="Trở về trang chủ">×</a>
                                        </button>
                                        <h1 class="h4 text-gray-900 mb-4">Quên mật khẩu</h1>
                                    </div>
                                    <form class="user" action="@Url.Action("ForgotPasswordDAO")" method="post">
                                        <div class="form-group">
                                            <input type="email" name="email" class="form-control form-control-user" id="inputEmail" placeholder="Email">
                                        </div>
                                        @{

                                            if (Session["Error"] != null)
                                            {
                                                <div class="small text-center text-danger">
                                                    <p id="txtValidateUsername">@Session["Error"].ToString()</p>
                                                </div>
                                            }
                                            else
                                            {

                                            }
                                        }
                                        <button type="submit" class="btn btn-primary btn-user btn-block">Lấy lại mật khẩu</button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Login", "User")">Đăng nhập</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="@Url.Action("Register", "User")">Đăng ký tài khoản</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="@Url.Content("~/content/admin/assets/")vendor/jquery/jquery.min.js"></script>
    <script src="@Url.Content("~/content/admin/assets/")vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="@Url.Content("~/content/admin/assets/")vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="@Url.Content("~/content/admin/assets/")js/sb-admin-2.min.js"></script>


    @{
        Session["Error"] = null;
    }

</body>

